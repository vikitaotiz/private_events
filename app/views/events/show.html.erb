<p>
  <strong>Name:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>
<hr>
<%= button_to 'Attend This Event', {:controller => "attended_events", :action => "create", :event_id => @event.id, :user_id=> current_user} , :method=>:post  %>

<hr>
<h4>Attendees</h4>
<ul>
  <% @event.attendees.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
</ul>
<%= link_to 'Back', events_path %>